{
  "name": "Focus Master Pro - Ultimate Productivity Suite",
  "description": "Professional Pomodoro timer with AI insights, advanced analytics, project management, and team collaboration",
  "version": "2.0.0",
  "manifest_version": 3,
  
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "idle"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  }
}
