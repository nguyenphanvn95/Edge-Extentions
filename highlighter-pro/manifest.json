{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "short_name": "__MSG_extension_short_name__",
    "description": "__MSG_extension_description__",
    "version": "2.1.0",
    "default_locale": "en",
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_popup": "src/popup/index.html"
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/jquery-2.1.3.min.js",
                "contentScript.js"
            ],
            "css": [
                "src/contentScripts/hoverTools/index.css"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "commands": {
        "execute-highlight": {
            "suggested_key": {
                "default": "Alt+H",
                "mac": "MacCtrl+H"
            },
            "description": "Highlight selected text"
        },
        "toggle-highlighter-cursor": {
            "suggested_key": {
                "default": "Alt+Shift+H",
                "mac": "MacCtrl+Shift+H"
            },
            "description": "Toggle the highlighter cursor"
        },
        "change-color-1": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "Change to color 1 (Yellow)"
        },
        "change-color-2": {
            "suggested_key": {
                "default": "Alt+2"
            },
            "description": "Change to color 2 (Cyan)"
        },
        "change-color-3": {
            "suggested_key": {
                "default": "Alt+3"
            },
            "description": "Change to color 3 (Lime)"
        },
        "change-color-4": {
            "suggested_key": {
                "default": "Alt+4"
            },
            "description": "Change to color 4 (Magenta)"
        },
        "delete-highlight": {
            "suggested_key": {
                "default": "Alt+D"
            },
            "description": "Delete selected highlight"
        },
        "open-sidepanel": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "Open highlights sidepanel"
        }
    },
    "permissions": [
        "contextMenus",
        "scripting",
        "storage",
        "sidePanel",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*.png",
                "images/*.svg",
                "src/contentScripts/*",
                "src/sidepanel/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
